<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.google.android.apps.gsa.assistant.settings.shared.PreferenceHolder android:key="@string/assistant_device_id_group_holder">
        <com.google.android.apps.gsa.assistant.settings.shared.CustomPreferenceCategory android:title="@string/assistant_settings_google_home_device_id_category" android:key="@string/assistant_device_id_google_home_preference_category">
            <com.google.android.apps.gsa.assistant.settings.shared.MainScreenDropDownPreference android:persistent="false" android:key="googleHomeDeviceId" />
            <com.google.android.apps.gsa.assistant.settings.shared.AddressPreference android:persistent="false" android:key="googleHomeLocation" />
            <SwitchPreferenceCompat android:persistent="false" android:title="@string/common_device_personal_info_permission_title" android:key="googleHomePersonalInfoPermission" android:summary="@string/common_device_personal_info_permission_summary" android:defaultValue="true" />
            <SwitchPreferenceCompat android:persistent="false" android:title="@string/common_device_notification_permission_title" android:key="googleHomeNotificationPermission" android:summary="@string/common_device_notification_permission_summary" android:defaultValue="true" />
            <SwitchPreferenceCompat android:persistent="false" android:title="@string/google_home_device_youtube_restricted_mode_title" android:key="googleHomeYoutubeRestrictedMode" android:summary="@string/google_home_device_youtube_restricted_mode_summary" android:defaultValue="true" />
            <ListPreference android:persistent="false" android:title="@string/common_device_assistant_language_title" android:key="googleHomeAssistantLanguage" android:summary="%s" android:dialogTitle="@string/common_device_assistant_language_title" />
        </com.google.android.apps.gsa.assistant.settings.shared.CustomPreferenceCategory>
    </com.google.android.apps.gsa.assistant.settings.shared.PreferenceHolder>
</PreferenceScreen>